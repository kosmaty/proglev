<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import com.proglev.domain.Pregnancy?>
<?import javafx.collections.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<TableView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" fx:id="pregancyTable"
           xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.proglev.gui.PregnanciesTableController">
    <columns>
        <TableColumn prefWidth="157.0" text="Imię">
            <cellValueFactory>
                <PropertyValueFactory property="patientFirstName"/>
            </cellValueFactory>
        </TableColumn>
        <TableColumn minWidth="6.0" prefWidth="210.0" text="Nazwisko">
            <cellValueFactory>
                <PropertyValueFactory property="patientLastName"/>
            </cellValueFactory>
        </TableColumn>
        <TableColumn minWidth="0.0" prefWidth="232.0" text="Data ostatniej miesiączki">
            <cellValueFactory>
                <PropertyValueFactory property="lastPeriodDate"/>
            </cellValueFactory>
        </TableColumn>
    </columns>
    <items>
        <FXCollections fx:factory="observableArrayList">
            <Pregnancy patientFirstName="Isabella" patientLastName="Johnson"/>
            <Pregnancy patientFirstName="Emma" patientLastName="Jones"/>
        </FXCollections>
    </items>
    <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
    </columnResizePolicy>
</TableView>