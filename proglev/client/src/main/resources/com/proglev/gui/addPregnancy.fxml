<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.proglev.gui.AddPregnancyController">
    <top>
        <GridPane hgap="10.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0"
                                   />
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="435.0" minWidth="10.0"
                                 />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Imię"/>
                <Label text="Nazwisko" GridPane.rowIndex="1"/>
                <Label text="Data ostatniej miesiączki" GridPane.rowIndex="2"/>
                <TextField fx:id="firstNameField" GridPane.columnIndex="1"/>
                <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <DatePicker fx:id="lastPeriodDateField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <buttons>
                        <Button mnemonicParsing="false" text="Zapisz" ButtonBar.buttonData="APPLY" onAction="#save"
                                fx:id="saveButton"/>
                        <Button mnemonicParsing="false" text="Anuluj" ButtonBar.buttonData="CANCEL_CLOSE"
                                onAction="#cancel"/>
                    </buttons>
                </ButtonBar>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </GridPane>
    </top>
</BorderPane>
