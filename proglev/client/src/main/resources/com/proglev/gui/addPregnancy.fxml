<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.proglev.gui.AddPregnancyController">
    <top>
        <GridPane hgap="10.0" vgap="5.0" BorderPane.alignment="CENTER" styleClass="edit-form" stylesheets="@proglev.css">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" />
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="435.0" minWidth="10.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="%firstName" />
                <Label text="%lastName" GridPane.rowIndex="1" />
                <Label text="%email" GridPane.rowIndex="2" />
                <Label text="%lastPeriodDate" GridPane.rowIndex="3" />
                <TextField fx:id="firstNameField" GridPane.columnIndex="1" />
                <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <DatePicker fx:id="lastPeriodDateField" GridPane.columnIndex="1" GridPane.rowIndex="3" promptText="%dateFieldPromptText"/>
                <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                    <buttons>
                        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#save" text="%save" ButtonBar.buttonData="APPLY" />
                        <Button mnemonicParsing="false" onAction="#cancel" text="%cancel" ButtonBar.buttonData="CANCEL_CLOSE" />
                    </buttons>
                </ButtonBar>


            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </GridPane>
    </top>
</BorderPane>
