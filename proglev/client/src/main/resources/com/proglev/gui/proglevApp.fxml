<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import com.proglev.domain.Pregnancy?>
<?import javafx.collections.*?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" style="-fx-background-color: white;" stylesheets="@proglev.css"
            xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.proglev.gui.ProgLevController">
    <top>
        <HBox styleClass="proglev-main-menu" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" text="Lista pacjentek"/>
                <Button mnemonicParsing="false" text="Nowa pacjentka"/>
            </children>
        </HBox>
    </top>
    <center>
        <TableView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" fx:id="pregancyTable">
            <columns>
                <TableColumn prefWidth="157.0" text="Imię">
                    <cellValueFactory>
                        <PropertyValueFactory property="patientFirstName"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn minWidth="6.0" prefWidth="210.0" text="Nazwisko">
                    <cellValueFactory>
                        <PropertyValueFactory property="patientLastName"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn minWidth="0.0" prefWidth="232.0" text="Data ostatniej miesiączki"/>
            </columns>
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <Pregnancy patientFirstName="Isabella" patientLastName="Johnson"/>
                    <Pregnancy patientFirstName="Emma" patientLastName="Jones"/>
                </FXCollections>
            </items>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>
